doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title App Usuarios
        link(rel="stylesheet", href="style.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
    body     
        div.container
            h1= "Registro de Usuarios" 
            input(type="text" placeholder="Nombre usuario" id="nombre")
            br
            input(type="text" placeholder="Telefono" id="numero")
            br
            button(id="button-agreged") Agregar Usuario
            div.contacto
                br
                h2= "Usuarios Registrados en Base de datos"
                each usuario in usuarios
                    hr
                    p=`ID Usuario: ${ usuario.id } | Nombre: ${ usuario.nombre  } ` 
                        span(class="borrar material-symbols-outlined" id=`${usuario.id}`) delete 

    script(src="functionIndexPug.js") 
